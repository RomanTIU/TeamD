@model IEnumerable<DotaLicenta.Models.Team>

@{
    ViewBag.Title = "Index";
}

<style>
    .jumbotron {
        padding-top: 3rem;
        padding-bottom: 3rem;
        margin-bottom: 0;
        
    }
</style>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="jumbotron" style="background-color:white">
    @foreach (var item in Model)
     {
        <div class="card" style="width: 18rem;">
            <img src="@Url.Content("~/Content/Image/"+item.ImagePath)" />
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Echipa a fost fondata in anul 2020 de catre Polovei Roman </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"></li>
            </ul>





        </div>    
        
        
        
        
        
        
        
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Teamates", "Teamates", new { id = item.Id })
                
     }

    
</div>
