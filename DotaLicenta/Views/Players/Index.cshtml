@model IEnumerable<ElectronicLicenta.Models.Player>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    

@foreach (var item in Model) {
    <div class="jumbotron">
        <div class="col-md-3 px-1">
            <div class="form-group">
                <label>Avatar</label>
                <img src=@Url.Content("~/content/Image/"+@item.ImagePath) class="thumbnail" alt="..." width="100" height="100">
            </div>
        </div>
        <div class="col-md-3 px-1">
            <div class="form-group">
                <label>NickName</label>
                <input type="text" class="form-control" disabled="" placeholder="NickNane" value="@item.NickName">
            </div>
        </div>

        <div class="col-md-3 px-1">
            <div class="form-group">
                <label>Role</label>
                <input type="text" class="form-control" disabled="" placeholder="Role" value="@item.Role">
            </div>
        </div>
        <div class="col-md-3 px-1">
            <div class="form-group">
                <label>Rating</label>
                <input type="text" class="form-control" disabled="" placeholder="Rating" value="@item.Rating">
            </div>
        </div>
        <div class="col-md-3 px-1">
            <div class="form-group">
                <label>Age</label>
                <input type="text" class="form-control" disabled placeholder="Age" value="@item.Age">
            </div>
        </div>
        <div class="col-md-3 px-1">
            <div class="form-group">
                <label>Country</label>
                <input type="text" class="form-control" disabled="" placeholder="Country" value="@item.Country">
            </div>
        </div>
        <br /><br /><br /><br />    
            
                 @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            
        



      


    </div>
}

</table>
